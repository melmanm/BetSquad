@model BetSquad.Models.AdminAddGameModel

@{
    ViewData["Title"] = "AddGame";
}
<script type="text/javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>
<h2>Add Game- ADMIN</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameStartTime" class="control-label"></label>
                <input asp-for="GameStartTime" type="text"/>

                <span asp-validation-for="GameStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameType" class="control-label"></label>
                <select asp-for="GameType" asp-items="Html.GetEnumSelectList<GameType>()">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="GameType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Team1</label>
                <select asp-for="Team1Id"
                        asp-items="@(new SelectList(Model.Teams,"Id","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Team1Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Team2</label>
                <select asp-for="Team2Id"
                        asp-items="@(new SelectList(Model.Teams,"Id","Name"))">
                    <option>Please select one</option>

                </select>
                <span asp-validation-for="Team2Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>



        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>